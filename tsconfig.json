{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["/*"],
      "@components/*": ["components/*"],
      "@views/*": ["views/*"],
      "@utils/*": ["utils/*"],
      "@lib/*": ["lib/*"],
      "@hooks/*": ["hooks/*"],
      "@types/*": ["types/*"],
      "@theme/*": ["theme/*"],
      "@context/*": ["contexts/*"],
      "@config/*": ["config/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}